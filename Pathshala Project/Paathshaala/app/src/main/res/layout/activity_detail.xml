<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shade2"
    tools:context=".DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Information"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="35dp"
                android:id="@+id/title_course"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/student_name"
                android:text="Student Name : "
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_value"
                android:visibility="gone"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Student values"
                android:background="@drawable/edit_text_border"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:text="Email Id : "
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/email_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="email id"
                android:layout_below="@+id/duration"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/no_students"
                android:text="Students Count : "
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/no_students_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Count"
                android:layout_below="@+id/email"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/course_name"
                android:textColor="@color/text_view_print"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="Course Name : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/course_name_value"
                android:hint="Course name"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:layout_below="@+id/title_course"
                android:layout_toRightOf="@id/course_name"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/course_fees"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Course Fee : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/course_fees_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/duration"
                android:text="Course Duration : "
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/duration_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Duration"
                android:layout_below="@+id/course_fees"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ins_name"
                android:text="Instructor Name : "
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ins_name_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="instructor_name"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/start_date"
                android:text="Start Date : "
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/start_date_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Date"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/timing"
                android:text="Timings : "
                android:textSize="20dp"
                android:layout_below="@+id/start_date"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/timing_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="timing"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/venue"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Venue : "
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/venue_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Venue"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor Information"
                android:textSize="35dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:id="@+id/title_instructor"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/stud_name"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Instructor Name : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/stud_name_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Name"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dob"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Date of Birth : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dob_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="DOB"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Gender : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/gender_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Male/Female"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Contact No : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/phone_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="Number"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/experiance"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Experiance : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/experiance_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="experiance1,2,3"
                android:layout_weight="1"
                android:textSize="20dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/qualification"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Qualification : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/qualification_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="qualification"
                android:layout_weight="1"
                android:textSize="20dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/skills"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/text_view_print"
                android:text="Skills : "
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/skills_value"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColorHint="@color/hint_white"
                android:hint="skills"
                android:layout_weight="1"
                android:textSize="20dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:paddingTop="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dcertificate"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:background="@drawable/button_base"
                android:layout_marginRight="5dp"
                android:text="Instructore's Certificate"
                android:onClick="oncertificate"
                />
            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enroll"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:background="@drawable/button_base"
            android:text="Enroll"
            android:onClick="onEnroll"
            />
        </LinearLayout>
    </LinearLayout>

</ScrollView>