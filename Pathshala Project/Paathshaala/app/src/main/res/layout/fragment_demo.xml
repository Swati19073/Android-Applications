<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shadowDx="10"
        android:shadowDy="30"
        card_view:cardCornerRadius="25dp"
        android:padding="12dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        >
        <FrameLayout
            android:background="#00BCD4"
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp"
            tools:context=".DemoFragment">

            <!-- <android.support.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="353dp"
                 android:shadowColor="#F44336"
                 android:shadowDx="10"
                 android:shadowDy="30"
                 android:shadowRadius="50"
                 card_view:cardCornerRadius="35dp"
                 card_view:cardElevation="4dp"
                 card_view:cardUseCompatPadding="true">-->
            <!-- TODO: Update blank fragment layout -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="key"
                    android:visibility="gone"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/key"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:visibility="gone"
                    android:text="100"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="Course Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/coursename"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="ds"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:layout_weight="1"
                    android:text="Instructor Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/instructor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="Akshaj"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:layout_weight="1"
                    android:text="Start Date"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="26 nov"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:layout_weight="1"
                    android:text="Fees"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/fees"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="Rs 4000"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/buttonMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_base"

                    android:text="More Information"/>
                <Button
                    android:id="@+id/showall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_base"
                    android:layout_marginLeft="10dp"

                    android:text="Show all"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>