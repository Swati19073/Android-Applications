<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowCourseDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp"
        android:background="@drawable/shade2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Info"
            android:fontFamily="@font/proxima_nova_bold"
            android:textSize="25dp"
            android:id="@+id/title_course"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_name"
            android:textColor="@color/text_view_print"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="Course Name : "
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/title_course"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_name_value"
            android:hint="Course name"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/title_course"
            android:layout_toRightOf="@id/course_name"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date"
            android:text="Start Date        : "
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/text_view_print"
            android:layout_below="@+id/course_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date_value"
            android:hint="Date"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/course_name_value"
            android:layout_toRightOf="@id/start_date"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:textColor="@color/text_view_print"
            android:text="Course Duration : "
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/start_date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration_value"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:hint="Duration"
            android:layout_below="@+id/start_date_value"
            android:layout_toRightOf="@id/duration"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="Email Id : "
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/text_view_print"
            android:layout_below="@+id/duration"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_value"
            android:hint="email id"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/duration_value"
            android:layout_toRightOf="@id/email"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_fees"
            android:text="Course Fee : "
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_fees_value"
            android:textColorHint="@color/hint_white"
            android:hint="course fees"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/email_value"
            android:layout_toRightOf="@id/course_fees"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ins_name"
            android:text="Instructor Name : "
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/course_fees"
            android:textColor="@color/text_view_print"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ins_name_value"
            android:hint="student_name"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/course_fees_value"
            android:layout_toRightOf="@id/ins_name"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student_name"
            android:text="Student Name : "
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/ins_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student_name_value"
            android:hint="student_name"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/ins_name_value"
            android:layout_toRightOf="@id/student_name"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timing"
            android:text="Timings : "
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/student_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timing_value"
            android:hint="timing"
            android:textColorHint="@color/hint_white"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/student_name_value"
            android:layout_toRightOf="@id/timing"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_students"
            android:textColor="@color/text_view_print"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="Students Count : "
            android:textSize="20dp"
            android:layout_below="@+id/timing"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_students_value"
            android:hint="Count"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/timing_value"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_toRightOf="@id/no_students"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/venue"
            android:textColor="@color/text_view_print"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="Venue : "
            android:textSize="20dp"
            android:layout_below="@+id/no_students"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/venue_value"
            android:hint="Venue"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/no_students_value"
            android:layout_toRightOf="@id/venue"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text="Student Info"
            android:textSize="25dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:id="@+id/title_student"
            android:layout_below="@+id/venue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_published"
            android:text="Course Published : "
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/text_view_print"
            android:layout_below="@+id/title_student"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_published_value"
            android:hint="Course name"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/title_student"
            android:layout_toRightOf="@id/course_published"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob"
            android:text="Date of Birth : "
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/text_view_print"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/course_published"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob_value"
            android:textColorHint="@color/hint_white"
            android:hint="Course name"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/course_published_value"
            android:layout_toRightOf="@id/dob"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/experiance"
            android:text="Experiance : "
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/dob"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/experiance_value"
            android:fontFamily="@font/proxima_nova_regular"
            android:hint="experiance"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/dob_value"
            android:layout_toRightOf="@id/experiance"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:text="Gender : "
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/experiance"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_value"
            android:hint="Male/Female"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/experiance_value"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_toRightOf="@id/gender"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stud_name"
            android:text="Student Name : "
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/gender"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stud_name_value"
            android:hint="Name"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/gender_value"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_toRightOf="@id/stud_name"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:textColor="@color/text_view_print"
            android:text="Contact No : "
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/stud_name"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_white"
            android:id="@+id/phone_value"
            android:hint="Number"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/stud_name_value"
            android:layout_toRightOf="@id/phone"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qualification"
            android:text="Qualification : "
            android:textColor="@color/text_view_print"
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qualification_value"
            android:hint="qualification"
            android:textColorHint="@color/hint_white"
            android:layout_below="@+id/phone_value"
            android:layout_toRightOf="@id/qualification"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skills"
            android:text="Skills : "
            android:textColor="@color/text_view_print"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/qualification"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_white"
            android:id="@+id/skills_value"
            android:hint="qualification"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/qualification_value"
            android:layout_toRightOf="@id/skills"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enroll"
            android:layout_below="@+id/skills"
            android:layout_centerHorizontal="true"
            android:text="Enroll"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:background="@drawable/button_base"
            />
    </RelativeLayout>

</ScrollView>
