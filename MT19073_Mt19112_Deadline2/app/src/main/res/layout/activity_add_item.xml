<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_item_name"
        android:layout_marginTop="70dp"
        android:hint="Item Name"
        android:textSize="20dp"
        android:padding="20dp"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_item_quant"
        android:layout_below="@+id/et_item_name"
        android:layout_marginTop="20dp"
        android:hint="Item Quantity"
        android:textSize="20dp"
        android:padding="20dp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_item_cost"
        android:layout_below="@+id/et_item_quant"
        android:layout_marginTop="20dp"
        android:hint="Item Cost"
        android:textSize="20dp"
        android:padding="20dp"
        ></EditText>

    <Button
        android:id="@+id/btn_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_item_cost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:background="@drawable/btn_admin"
        android:text="ADD"
        android:textColor="#fff"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="25dp"></Button>


</RelativeLayout>
